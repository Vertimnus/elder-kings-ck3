                onclick = "[GetVariableSystem.Clear('destruction_show')]"
                onclick = "[GetVariableSystem.Toggle('illusion_show')]"
                onclick = "[GetVariableSystem.Clear('restoration_show')]"
                onclick = "[GetVariableSystem.Clear('necromancy_show')]"
                down = "[GetVariableSystem.Exists('illusion_show')]"

                using = tooltip_above
            }

            button_tab = {
                name = "restoration"
                size = { 0 70 }
                layoutpolicy_horizontal = expanding

                text = restoration
                default_format = "#low"
                onclick = "[GetVariableSystem.Clear('alteration_show')]"
                onclick = "[GetVariableSystem.Clear('conjuration_show')]"
                onclick = "[GetVariableSystem.Clear('destruction_show')]"
                onclick = "[GetVariableSystem.Clear('illusion_show')]"
                onclick = "[GetVariableSystem.Toggle('restoration_show')]"
                onclick = "[GetVariableSystem.Clear('necromancy_show')]"
                down = "[GetVariableSystem.Exists('restoration_show')]"

                using = tooltip_above
            }

            button_tab = {
                name = "necromancy"
                size = { 0 70 }
                layoutpolicy_horizontal = expanding

                text = "Necromancy"
                default_format = "#low"
                onclick = "[GetVariableSystem.Clear('alteration_show')]"
                onclick = "[GetVariableSystem.Clear('conjuration_show')]"
                onclick = "[GetVariableSystem.Clear('destruction_show')]"
                onclick = "[GetVariableSystem.Clear('illusion_show')]"
                onclick = "[GetVariableSystem.Clear('restoration_show')]"
                onclick = "[GetVariableSystem.Toggle('necromancy_show')]"
                down = "[GetVariableSystem.Exists('necromancy_show')]"

                using = tooltip_above
            }
        }

