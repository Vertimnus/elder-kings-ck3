                onclick = "[GetVariableSystem.Toggle('destruction_show')]"
                onclick = "[GetVariableSystem.Clear('illusion_show')]"
                onclick = "[GetVariableSystem.Clear('restoration_show')]"
                onclick = "[GetVariableSystem.Clear('necromancy_show')]"
                down = "[GetVariableSystem.Exists('destruction_show')]"

                using = tooltip_above
            }

            button_tab = {
                name = "alteration"
